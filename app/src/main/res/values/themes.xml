<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Homework" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Homework" parent="Base.Theme.Homework" />

    <style name="Theme.Contact.ActionButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="iconGravity">textTop</item>
        <item name="iconPadding">12dp</item>
        <item name="iconSize">28dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="iconTint">@color/iconColor</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Theme.Contact.PhoneCall" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="iconPadding">16dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="iconTint">@color/iconColor</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="icon">@drawable/ic_call</item>
    </style>
    <style name="Theme.Contact.Sms" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="icon">@drawable/ic_sms</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconTint">@color/iconColor</item>
        <item name="android:padding">4dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>
</resources>